{
  "name": "decap-sdk",
  "version": "1.1.0",
  "description": "Decentralized CAPTCHA SDK for Web3 applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev": "tsup --watch",
    "dev:test": "vite",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run build:check",
    "build:check": "node scripts/build-check.js",
    "size": "size-limit",
    "analyze": "pnpm run build && bundlesize"
  },
  "keywords": [
    "captcha",
    "web3",
    "decentralized",
    "ethereum",
    "react",
    "blockchain"
  ],
  "author": "DeCap Team",
  "license": "MIT",
  "peerDependencies": {
    "ethers": "^6.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.3.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "rimraf": "^6.1.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "clsx": "^2.1.1"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "20 KB",
      "gzip": true
    },
    {
      "path": "dist/index.mjs",
      "limit": "18 KB",
      "gzip": true
    }
  ],
  "bundlesize": [
    {
      "path": "./dist/*.js",
      "maxSize": "25 KB"
    }
  ],
  "sideEffects": [
    "*.css"
  ]
}
